!!!
%html
  %head
    %meta{:content => "Christopher Lichti's Personal Portal", :name => "description"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %meta{:content => "christopher.lichti", :name => "author"}/
    %link{:href => "/favicon.ico?v=2", :rel => "shortcut icon"}
    / Web Fonts
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700,300&subset=latin,latin-ext", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Raleway:700,400,300", :rel => "stylesheet", :type => "text/css"}/

    %title #{yield :title}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.no-trans{:class => yield(:body_class) || 'page'}
    = render 'layouts/header'
    = yield
    = render 'layouts/footer'
