= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :isbn
    = f.text_field :isbn
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :cover
    = f.text_field :cover
  .field
    = f.label :purchase_url
    = f.text_field :purchase_url
  .actions
    = f.submit 'Save'
