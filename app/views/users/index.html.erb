<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <%= @listing != :all ? (link_to "All Users", :action => "index") : "All Users" %>
      |
      <%= @listing != :not_approved ? (link_to "Users awaiting approval", :action => "index", :approved => "false") : "Users awaiting approval" %>
      <% if @users %>
          <table class="table">
            <tbody>
            <% @users.each do |user| %>
                <tr>
                  <%= render user %>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>
        <div class="column">No Users</div>
      <% end %>
    </div>
  </div>
</div>